{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Covid-19 cases around the world!!!",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/prash21/FIT3179-W9-HW/main/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/prash21/FIT3179-W9-HW/main/data/covidData.csv"
      },
      "encoding": {
            "color": {"field": "Total_cases", 
                      "type": "quantitative",
                      "scale":{
                          "scheme":"reds"
                      }          
            }
          }
        }
      ]
    }
  ]
}
